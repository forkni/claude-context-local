{
  "embedding": {
    "model_name": "BAAI/bge-m3",
    "dimension": 1024,
    "batch_size": 128,
    "query_cache_size": 128,
    "enable_import_context": true,
    "enable_class_context": true,
    "max_import_lines": 10,
    "max_class_signature_lines": 5
  },
  "search_mode": {
    "default_mode": "hybrid",
    "enable_hybrid": true,
    "bm25_weight": 0.4,
    "dense_weight": 0.6,
    "bm25_k_parameter": 100,
    "bm25_use_stopwords": true,
    "bm25_use_stemming": true,
    "min_bm25_score": 0.1,
    "rrf_k_parameter": 100,
    "enable_result_reranking": true,
    "default_k": 5,
    "max_k": 50
  },
  "performance": {
    "use_parallel_search": true,
    "max_parallel_workers": 2,
    "enable_parallel_chunking": true,
    "max_chunking_workers": 4,
    "enable_entity_tracking": true,
    "prefer_gpu": true,
    "gpu_memory_threshold": 0.65,
    "enable_fp16": true,
    "prefer_bf16": true,
    "enable_dynamic_batch_size": true,
    "dynamic_batch_min": 8,
    "dynamic_batch_max": 128,
    "enable_auto_reindex": true,
    "max_index_age_minutes": 60.0
  },
  "multi_hop": {
    "enabled": true,
    "hop_count": 2,
    "expansion": 0.3,
    "initial_k_multiplier": 2.0
  },
  "routing": {
    "multi_model_enabled": false,
    "default_model": "bge_m3"
  },
  "reranker": {
    "enabled": true,
    "model_name": "BAAI/bge-reranker-v2-m3",
    "top_k_candidates": 50,
    "min_vram_gb": 2.0,
    "batch_size": 16
  },
  "output": {
    "format": "ultra"
  },
  "chunking": {
    "enable_greedy_merge": true,
    "min_chunk_tokens": 50,
    "max_merged_tokens": 1000,
    "enable_large_node_splitting": false,
    "max_chunk_lines": 100,
    "token_estimation": "tiktoken"
  }
}
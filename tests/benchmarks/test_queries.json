{
  "version": "1.0",
  "description": "Standard test queries for benchmarking code search quality and performance",
  "query_categories": {
    "identifier_queries": {
      "description": "Queries testing identifier matching (camelCase, snake_case, etc.)",
      "queries": [
        "user data handler",
        "authentication service",
        "vertex shader",
        "process payment",
        "validate input",
        "error logger",
        "database connection",
        "file reader",
        "cache manager",
        "config parser"
      ]
    },
    "semantic_queries": {
      "description": "Natural language queries testing semantic understanding",
      "queries": [
        "how to handle errors",
        "code that processes user authentication",
        "functions that read from database",
        "classes for managing configuration",
        "methods that validate input data",
        "code for logging activities",
        "functions that handle file operations",
        "classes for caching data",
        "code for parsing json",
        "methods that format output"
      ]
    },
    "structural_queries": {
      "description": "Queries testing call graph and structural understanding",
      "queries": [
        "functions that call validate",
        "who calls the main function",
        "functions called by process_data",
        "classes that inherit from BaseModel",
        "modules that import numpy",
        "functions with error handling",
        "classes with initialization",
        "methods that return bool",
        "functions with type hints",
        "code that uses decorators"
      ]
    },
    "code_pattern_queries": {
      "description": "Queries for specific code patterns",
      "queries": [
        "try except blocks",
        "async functions",
        "list comprehensions",
        "context managers",
        "property decorators",
        "static methods",
        "generator functions",
        "lambda expressions",
        "class methods",
        "abstract methods"
      ]
    },
    "domain_specific_queries": {
      "description": "Domain-specific queries (Python/GLSL/C++)",
      "queries": [
        "opengl shader code",
        "vertex buffer operations",
        "texture sampling",
        "matrix transformations",
        "pointer operations",
        "memory allocation",
        "vector math",
        "string manipulation",
        "datetime handling",
        "json serialization"
      ]
    }
  },
  "notes": [
    "Each query category has 10 test queries for a total of 50 queries",
    "Queries span different difficulty levels and query types",
    "Ground truth labels should be added for each query to compute Success@k and MRR",
    "Baseline metrics (v0.5.2) should be captured before Phase 1 implementation"
  ]
}
